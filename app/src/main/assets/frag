#version 300 es
precision mediump float;
out vec4 FragColor;

in vec3 Normal;
in vec3 FragPos;


uniform vec3 lightPos;
uniform vec3 lightColor;
uniform vec3 viewPos;
uniform vec3 objectColor;

//用于实现简单交互
uniform int p;
uniform float ambientStrength;
uniform float diffuseStrength;
uniform float highStrength;


void main()
{
	// ambient
    vec3 ambient = ambientStrength * lightColor;
  	
    // diffuse
    vec3 norm = normalize(Normal);
    vec3 lightDir = normalize(lightPos - FragPos);
    float diff = max(dot(norm, lightDir), 0.0);
    vec3 diffuse =diffuseStrength * diff * lightColor;
  
   // highlight
   vec3 viewDir = normalize(viewPos - FragPos);
   vec3  bivector=normalize(lightDir+viewDir);
   float high=pow(max(0.0 ,dot(bivector, norm)), float(p));
   vec3 highlight=highStrength * high * lightColor;

   FragColor = vec4((ambient +  diffuse) * objectColor +  highlight, 1.0);
}